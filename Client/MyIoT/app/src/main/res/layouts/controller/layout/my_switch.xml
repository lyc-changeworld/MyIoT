<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my_controller_height"
    android:background="@drawable/corner_round">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/my_controller_vertical_margin"
        android:paddingBottom="@dimen/my_controller_vertical_margin"
        android:paddingLeft="@dimen/my_controller_horizontal_margin"
        android:paddingRight="@dimen/my_controller_horizontal_margin">
        <TextView
            style="@style/TextViewController"
            android:id="@+id/deviceName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/deviceSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_config"
        android:layout_width="@dimen/btn_sml_width"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:text="@string/btn_controller_configure"
        android:textColor="@android:color/white"/>
    <Button
        android:id="@+id/btn_remove"
        android:layout_width="@dimen/btn_sml_width"
        android:layout_height="match_parent"
        android:background="@drawable/corner_round_right"
        android:text="@string/btn_controller_remove"
        android:textColor="@android:color/white"/>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>




